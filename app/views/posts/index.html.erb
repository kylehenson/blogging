<h1>All Posts</h1>

<%= link_to "Create a Post", new_post_path %>
<button type="button" id="draft-posts">drafts</button>

<div class="published-posts">
  <% @posts.each do |post| %>
    <% if post.status == "publish" %>
      <h3><b>Title: </b><%= link_to post.title, post_path(post.id) %></h3>
      <h4>Author: <%= post.author %></h4>
    <% end %>
  <% end %>
</div>

<div class="draft-posts" style="display: none">
  <% @posts.each do |post| %>
    <% if post.status == "draft" %>
      <h3><b>Title: </b><%= link_to post.title, post_path(post.id) %></h3>
      <h4>Author: <%= post.author %></h4>
    <% end %>
  <% end %>
</div>


