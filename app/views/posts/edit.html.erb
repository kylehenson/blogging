<h1>Edit Post:</h1>

<%= form_for(@post, method: 'put') do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :body %>
  <%= f.text_area :body %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :status %>
  <%= f.select(:status, [['draft'], ['publish']]) %>
  <%= f.label :tags %>
  <%= f.collection_select(:tag_ids, @tags, :id, :name, {}, {multiple: true}) %><br><br>
  <%= f.file_field :image %>
  <%= f.submit "Submit" %>
<% end %>
