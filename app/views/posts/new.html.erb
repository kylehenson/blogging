<%= form_for(@post, url: posts_path) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :body %>
  <%= f.text_field :body %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :status %>
  <%= f.select(:status, [['draft'], ['publish']]) %>
  <%= f.label :tags %>
  <%= f.collection_select(:tag_ids, @tags, :id, :name, {}, {multiple: true}) %>
  <%= f.submit "Submit" %>
<% end %>
